doctype
html
    head
        title Dashboard :: Register
        link(rel='stylesheet', href='//cdn.kendostatic.com/2013.3.1119/styles/kendo.common.min.css')
        link(rel='stylesheet', href='//cdn.kendostatic.com/2013.3.1119/styles/kendo.bootstrap.min.css')
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='../stylesheets/style.css')
    body
        .login.well
            h1  Create user
            hr
            form(id='register-form', method='POST', action='/register' novalidate)
                .form-group
                    label(for='firstname') First Name
                    input(type='text', name='firstname', class='form-control',
                    id='firstname', placeholder='Enter First Name',
                    required, data-required-msg='First Name is required')
                .form-group
                    label(for='lastname') Last Name
                    input(type='text', name='lastname', class='form-control',
                    id='lastname', placeholder='Enter Last Name',
                    required, data-required-msg='Last Name is required')
                .form-group
                    label(for="gender") Gender
                    select(name="gender", class="form-control", id="gender"
                    required, data-required-msg="Gender is required")
                        option(value="male") Male
                        option(value="female") Female
                .form-group
                    label(for='birthdate') Birthdate
                    input(type='text', name='birthdate', class='form-control',
                    id='birthdate', placeholder='Enter The Birthdate',
                    required, data-required-msg='Birthdate is required')
                .form-group
                    label(for='taxvat') Taxvat
                    input(type='text', name='taxvat', class='form-control',
                    id='taxvat', placeholder='Enter Taxvat',
                    required, data-required-msg='Taxvat is required'
                    data-available data-available-url="validate/taxvat"
                    data-available-msg="There is already an account associated with this taxvat")
                .form-group
                    label(for='email') Email
                    input(type='email', name='email', class='form-control',
                    id='email', placeholder='Enter email',
                    required data-required-msg='Email address is required'
                    data-available data-available-url="validate/email"
                    data-available-msg="There is already an account associated with this email address")
                .form-group
                    label(for='confirm-email') Confirm Email
                    input(type='email', name='confirm-email', class='form-control',
                    id='confirm-email', placeholder='Confirm email',
                    required data-required-msg='Please confirm your email address',
                    data-matches='#email' data-matches-msg='The email addresses do not match')
                .form-group
                    label(for='username') Username
                    input(type='text', name='username', class='form-control',
                    id='username', placeholder='Enter username',
                    required, data-required-msg='Username is required'
                    data-available data-available-url="validate/username"
                    data-available-msg="The username #: data # is not available")
                .form-group
                    label(for='password') Password
                    input(type='password', name='password', class='form-control',
                    id='password', placeholder='Enter password'
                    required, data-required-msg='Password is required')
                .form-group
                    label(for='confirm-password') Confirm Password
                    input(type='password', name='confirm-password', class='form-control',
                    id='confirm-password', placeholder='Confirm password'
                    required, data-required-msg="Please confirm your password"
                    data-matches='#password' data-matches-msg='The passwords do not match')
                .form-group
                    button.btn.btn-default Register
                    a(href="login") Or Login
                include ../messages

    script(src='//code.jquery.com/jquery-1.9.1.min.js')
    script(src='//cdn.kendostatic.com/2013.3.1119/js/kendo.all.min.js')
    script(src='../javascripts/validate.js')